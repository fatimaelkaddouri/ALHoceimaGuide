<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"

        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:background="#D2D8DB">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="122dp"
            android:layout_height="118dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/jet" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="265dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/image1"
            android:layout_toRightOf="@id/image1"
            android:layout_weight="1"
            android:text="Sports"
            android:textColor="#0A0A0A"
            android:textSize="22dp"
            android:textStyle="normal|bold|italic" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"

        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:background="#D2D8DB">


        <ImageView
            android:id="@+id/image2"
            android:layout_width="124dp"
            android:layout_height="108dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/azur1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="276dp"
            android:layout_height="118dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="-4dp"
            android:layout_toEndOf="@id/image2"
            android:layout_toRightOf="@id/image2"
            android:layout_weight="1"
            android:text="Croisieres"
            android:textColor="#0A0A0A"
            android:textSize="22dp"
            android:textStyle="normal|bold|italic" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:background="#D2D8DB">


        <ImageView
            android:id="@+id/image3"
            android:layout_width="141dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/talaaa" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="290dp"
            android:layout_height="109dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-14dp"
            android:layout_marginLeft="-14dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/image3"
            android:layout_toRightOf="@id/image3"
            android:layout_weight="1"
            android:text="Parc National"
            android:textColor="#0A0A0A"
            android:textSize="22dp"
            android:textStyle="normal|bold|italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"

        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:background="#D2D8DB">


        <ImageView

            android:id="@+id/image4"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/camping" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="282dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/image4"
            android:layout_toRightOf="@id/image4"
            android:layout_weight="1"
            android:text="Eco-Comping"
            android:textColor="#0A0A0A"
            android:textSize="22dp"
            android:textStyle="normal|bold|italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:background="#D2D8DB">


        <ImageView
            android:id="@+id/image5"
            android:layout_width="128dp"
            android:layout_height="106dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/souk" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="271dp"
            android:layout_height="112dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/image5"
            android:layout_toRightOf="@id/image5"
            android:layout_weight="1"
            android:text="SOUK"
            android:textColor="#0A0A0A"
            android:textSize="22dp"
            android:textStyle="normal|bold|italic" />

    </RelativeLayout>


</LinearLayout>